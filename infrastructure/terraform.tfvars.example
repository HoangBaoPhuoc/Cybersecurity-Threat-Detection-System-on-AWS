# Jira Configuration
# URL of your Jira Cloud instance
jira_url = "https://your-domain.atlassian.net"

# Email address of the Jira user
jira_user = "email@example.com"

# API Token for Jira (create at https://id.atlassian.com/manage-profile/security/api-tokens)
jira_api_token = "your-api-token-here"

# Project Key where issues will be created
jira_project_key = "SEC"

# Optional: AWS Region
aws_region = "us-east-1"

# Wazuh Manager (EKS service endpoint)
wazuh_manager_endpoint = "wazuh.svc.cluster.local"

# EKS Cluster Name
eks_cluster_name = "nextgen-soc-eks"

# OpenSearch Vector Domain Name
opensearch_vector_domain_name = "threat-detection-vector"

# Playbooks Bucket
playbook_bucket_name = "threat-detection-playbooks"

# Operator UI Bucket
operator_ui_bucket_name = "threat-detection-operator-ui"
